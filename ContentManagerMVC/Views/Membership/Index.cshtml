@model IEnumerable<ContentManagerMVC.Models.UserMembership>

@{
    ViewBag.Title = "Index";
}

<h2>View User and Roles</h2>

<table>
    <tr>
        <th>
            User Name
        </th>
        <th>
            Roles
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.User.UserId }) 
        </td>
    </tr>
}

</table>
